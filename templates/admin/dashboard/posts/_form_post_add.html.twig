<form action="index.php?c=adminPosts&t=addPost" method="post" enctype="multipart/form-data">
  <div class="row">
    <div class="col-md-8 col-sm-12">
      <div>
        <label for="title">Titre</label><br />
        <input type="text" id="title" name="title" value="" />
      </div>
      <div>
        <label for="textarea">Article</label><br />
        <textarea type="text" id="textarea" class="textarea" name="content"></textarea>
      </div>
    </div>
    <div class="col-md-4 col-sm-12">
      <div>
        <label>
          Choisir une cat√©gorie<br />
          <select name="category">
            {% for category in categories %}
              <option value="{{ category.id }}">{{ category.name }}</option>
            {% endfor %}
          </select>
        </label>
      </div>
      <div>
        <label style="display: block;text-align: center;margin: 0 auto;" for="content">Ajouter une image (facultatif) </label><br />
        <input style="text-align: center;margin: 0 auto;" type="file" name="file_extension" />
      </div>
      <div class="divide20"></div>
      <div>
        <label>
          Choisir un ou plusieurs tag(s)<br />
          <select multiple name="tag[]">
            {% for tag in tags %}
              <option value="{{ tag.id }}">{{ tag.name }}</option>
            {% endfor %}
          </select>
        </label>
      </div>
    </div>
  </div>
  <div class="divide20"></div>
  <div class="divide20"></div>
  <div class="divide40"></div>
  <div>
    <input class="btn btn-default" type="submit" style="width: 100px;display: block; margin: 0 auto;"/>
  </div>
  <input type="hidden" name="add_post_token" id="add_post_token" value="{{ add_post_token }}" />
</form>
