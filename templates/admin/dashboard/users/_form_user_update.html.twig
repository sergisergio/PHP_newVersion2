<form action="?c=adminUsers&t=updateUser" method="post">
                    <div class="col-md-4">
                        <label>Role<br />
                        <select name="role">
                            {% if user.roles %}
                            <option value="1">Admin</option>
                            <option value="0">Membre</option>
                            {% else %}
                            <option value="0">Membre</option>
                            <option value="1">Admin</option>
                            {% endif %}
                        </select>
                        </label>
                    </div>
                    <div class="col-md-4">
                        <label>Activ√© ?<br />
                        <select name="active">
                            {% if user.active %}
                            <option value="1">Oui</option>
                            <option value="0">Non</option>
                            {% else %}
                            <option value="0">Non</option>
                            <option value="1">Oui</option>
                            {% endif %}
                        </select>
                        </label>
                    </div>
                    <div class="col-md-4">
                        <label>Banni ?<br />
                        <select name="banned">
                            {% if user.banned %}
                            <option value="1">Oui</option>
                            <option value="0">Non</option>
                            {% else %}
                            <option value="0">Non</option>
                            <option value="1">Oui</option>
                            {% endif %}
                        </select>
                        </label>
                    </div>
                    <input type="hidden" name="id" value="{{ user.id }}">
                    <div class="divide40"></div>
                    <div>
                        <input class="btn btn-default btn-modal" type="submit"/>
                    </div>
                    <input type="hidden" name="update_user_token" id="update_user_token" value="{{ update_user_token }}">
                </form>
