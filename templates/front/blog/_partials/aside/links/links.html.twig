<div class="sidebox box widget">
    <h3 class="section-title">Liens utiles</h3>
        <div class="panel-group" id="accordion">
          <div class="panel panel-default">
            {% for link in links %}
            <div class="panel-heading">
              <h4 class="panel-title"> <a data-toggle="collapse" class="panel-toggle {{ link.active }}" data-parent="#accordion" href="#collapse{{ link.id }}"> {{ link.name}} </a> </h4>
            </div>
            <div id="collapse{{ link.id }}" class="panel-collapse collapse {{ link.class }}">
              <div class="panel-body">
                <ul style="list-style-type: none;">
                  {% for sublink in sublinks %}
                  {% if link.id ==  sublink.link_id %}
                    <li><a href="{{ sublink.sublinkurl }}" target="_blank">{{ sublink.sublinkname }}</a></li>
                  {% endif %}
                  {% endfor %}
                </ul>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
</div>
