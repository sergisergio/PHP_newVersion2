    <div id="preloader">
        <div id="status">
            <div class="loadcircle"></div>
        </div>
    </div>

{% endblock %}

{% block header %}{{ include('front/home/_partials/header/header.html.twig') }}{% endblock %}

{# Main content #}
{% block main %}

    <!-- About Portfolio -->
    {% include 'front/home/_partials/portfolio/portfolio.html.twig' %}

    <!-- About Section -->
    {% include 'front/home/_partials/about/about.html.twig' %}

