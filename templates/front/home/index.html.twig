{% block footer %}{{ include('front/_partials/footer.html.twig') }}{% endblock %}

{% block js %}
  {{ parent() }}

  <script>
    $(window).scroll(function() {
        if ($(window).scrollTop() > 2450) { // scroll down abit and get the action
            $(".progress-bar").each(function() {
                each_bar_width = $(this).attr('aria-valuenow');
                $(this).width(each_bar_width + '%');
            });
        }
    });
  </script>
{% endblock %}
