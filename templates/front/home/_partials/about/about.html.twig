<section id="about">
    <div class="box">
        <h2 class="section-title">{{ description.title }}
            {% if session.admin != null %}
            <a href="" class="pull-right" data-toggle="modal" data-target="#myModal" data-rel="tooltip" data-placement="top" rel="tooltip" data-original-title="Modifier la description">
                <i class="fa fa-pencil" aria-hidden="true" style="color: red;"></i>
            </a>
            <!-- Modal -->
            {% include 'front/home/_partials/about/modal.html.twig' %}
            {% endif %}
        </h2>
        <div class="row">
            <div class="col-md-3 col-md-push-9 col-sm-4 col-sm-push-4 col-xs-4 col-xs-push-4">
                <figure><img src="../img/{{ description.image }}" alt="" /></figure>
            </div>
            <div class="col-md-9 col-md-pull-3 col-sm-12 col-xs-12">
                {{ description.content|raw }}
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="divide40"></div>
        <h2 class="section-title">&nbsp;</h2>
        <div class="divide10"></div>
    </div>
</section>
